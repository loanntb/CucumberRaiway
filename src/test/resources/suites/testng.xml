<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="BDD FRAMEWORK">
    <test name="Chrome Test" thread-count="1">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testRunner.LoginTest"/>
            <class name="testRunner.RegisterTest"/>
        </classes>

    </test> <!-- Test -->
    <test name="FirefoxTest">
