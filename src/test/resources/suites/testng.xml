            <class name="testRunner.LoginTest"/>
            <class name="testRunner.RegisterTest"/>
        </classes>
    </test>
    <test name="EdgeTest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testRunner.LoginTest"/>
            <class name="testRunner.RegisterTest"/>
        </classes>
    </test>

</suite> <!-- Suite -->